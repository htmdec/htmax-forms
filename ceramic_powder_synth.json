{
  "definitions": {
    "date": {
      "$id": "#/definitions/date",
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "igsnMetadata": {
      "id": "igsnMetadata",
      "type": "object",
      "format": "grid-strict",
      "title": "IGSN Creation",
      "options": {
        "grid_columns": 12,
        "titleHidden": true
      },
      "properties": {
        "_text1": {
          "type": "string",
          "title": "IGSN metadata",
          "format": "hidden",
          "description": "<p>This section gathers necessary information to create an IGSNs for each powder</p>",
          "propertyOrder": 0,
          "options": {
            "grid_columns": 12,
            "grid_break": true
          }
        },
        "institution": {
          "type": "string",
          "description": "Originating Institution",
          "enum": [
            "NW"
          ],
          "default": "NW",
          "propertyOrder": 1,
          "options": {
            "titleHidden": true,
            "grid_columns": 3,
            "enum_titles": [
              "Northwestern University"
            ]
          }
        },
        "groupNW": {
          "type": "string",
          "description": "Group within the institution",
          "enum": [
            "X"
          ],
          "default": "X",
          "propertyOrder": 2,
          "options": {
            "titleHidden": true,
            "grid_columns": 3,
            "enum_titles": [
              "Unknown"
            ]
          }
        },
        "material": {
          "type": "string",
          "description": "Material Type",
          "enum": [
            "CR"
          ],
          "default": "CR",
          "propertyOrder": 3,
          "options": {
            "titleHidden": true,
            "grid_columns": 3,
            "enum_titles": [
              "ceramics"
            ]
          }
        },
        "submaterialCR": {
          "type": "string",
          "description": "Material Subtype",
          "enum": [
            "A",
            "C"
          ],
          "propertyOrder": 4,
          "default": "A",
          "options": {
            "titleHidden": true,
            "dependencies": {
              "material": "CR"
            },
            "enum_titles": [
              "carbides",
              "nitrides"
            ],
            "grid_columns": 3
          }
        },
        "title": {
          "type": "string",
          "watch": {
            "title": "root.conditions.title"
          },
          "template": "{{title}}",
          "options": {
            "hidden": true,
            "grid_columns": 12
          }
        },
        "descriptionMethods": {
          "type": "string",
          "watch": {
            "description": "root.conditions.description"
          },
          "template": "{{description}}",
          "options": {
            "hidden": true,
            "grid_columns": 12
          }
        }
      }
    },
    "igsn": {
      "id": "igsn",
      "type": "object",
      "title": "IGSN",
      "description": "IGSN",
      "options": {
        "hidden": true
      },
      "properties": {
        "suffix": {
          "type": "string",
          "propertyOrder": 1,
          "options": {
            "hidden": true,
            "grid_columns": 12
          },
          "default": ""
        },
        "prefix": {
          "type": "string",
          "propertyOrder": 2,
          "description": "The unique identifier for the build.",
          "hidden": true,
          "template": "{{org}}{{gCM}}{{material}}{{sCR}}",
          "watch": {
            "org": "root.igsnMeta.institution",
            "gCM": "root.igsnMeta.groupNW",
            "material": "root.igsnMeta.material",
            "sCR": "root.igsnMeta.submaterialCR",
            "suffix": "igsn.suffix"
          },
          "options": {
            "grid_columns": 12,
            "hidden": true
          }
        },
        "request": {
          "type": "boolean",
          "propertyOrder": 3,
          "title": "Request IGSN",
          "description": "Whether to request an IGSN.",
          "default": true,
          "options": {
            "hidden": true,
            "grid_columns": 12
          }
        },
        "track": {
          "type": "boolean",
          "propertyOrder": 4,
          "title": "Track IGSN",
          "description": "Whether to track the IGSN.",
          "default": true,
          "options": {
            "hidden": true,
            "grid_columns": 12
          }
        },
        "field": {
          "type": "string",
          "propertyOrder": 5,
          "title": "Field",
          "description": "The field of the IGSN.",
          "default": "assignedIGSN",
          "const": "assignedIGSN",
          "options": {
            "hidden": true,
            "grid_columns": 12
          }
        },
        "batch": {
          "type": "object",
          "propertyOrder": 6,
          "properties": {
            "method": {
              "type": "string",
              "propertyOrder": 1,
              "title": "Method",
              "description": "The method to use to generate the batch IGSN.",
              "enum": [
                "from_array"
              ],
              "default": "from_array",
              "options": {
                "hidden": true,
                "grid_columns": 12
              }
            },
            "field": {
              "type": "string",
              "propertyOrder": 2,
              "default": "materials",
              "const": "materials",
              "options": {
                "hidden": true,
                "grid_columns": 12
              }
            }
          },
          "description": "Generate a batch IGSN",
          "options": {
            "hidden": true,
            "grid_columns": 12
          }
        }
      }
    },
    "files": {
      "$id": "files",
      "type": "object",
      "format": "grid",
      "properties": {
        "targetPath": {
          "type": "string",
          "title": "Target Path",
          "watch": {
            "sampleId": "root.sampleId"
          },
          "template": "{{sampleId}}"
        },
        "file": {
          "type": "string",
          "propertyOrder": 1,
          "title": "Upload files"
        },
        "button": {
          "title": "Browse",
          "format": "button",
          "propertyOrder": 2,
          "options": {
            "button": {
              "action": "button1CB",
              "uploadFor": "file"
            }
          }
        }
      }
    }
  },
  "properties": {
    "igsnMeta": {
      "$ref": "#/definitions/igsnMetadata",
      "propertyOrder": 0
    },
    "igsn": {
      "$ref": "#/definitions/igsn",
      "propertyOrder": 0,
      "options": {
        "hidden": true
      }
    },
    "assignedIGSN": {
      "type": "string",
      "propertyOrder": 0,
      "template": "{{prefix}}{{suffix}}",
      "watch": {
        "prefix": "igsn.prefix",
        "suffix": "igsn.suffix"
      },
      "options": {
        "hidden": true,
        "grid_columns": 12
      }
    },
    "sampleId": {
      "type": "string",
      "propertyOrder": 3,
      "template": "{{split composition ';' 1}}_{{temperature}}_{{time}}_{{process}}_{{fabricationDate}}",
      "watch": {
        "process": "root.process",
        "composition": "initialComposition",
        "temperature": "conditions.temperature",
        "time": "conditions.time",
        "fabricationDate": "fabricationDate"
      },
      "options": {
        "hidden": true
      }
    },
    "process": {
      "propertyOrder": 1,
      "title": "Synthesis Process",
      "type": "string",
      "enum": [
        "CH4",
        "NH3"
      ],
      "options": {
        "enum_titles": [
          "Gas carburization in 10% CH4/Bal Ar",
          "Gas nitridation in 10% NH3/Bal Ar"
        ]
      }
    },
    "initialComposition": {
      "title": "Initial Composition",
      "type": "string",
      "description": "Select a metal powder from the database. (autocompletes after 4 characters)",
      "format": "autocomplete",
      "options": {
        "autocomplete": {
          "search": "search_powder",
          "renderResult": "render_powder",
          "getResultValue": "get_powder_value",
          "autoSelect": true,
          "debounceTime": 500
        }
      },
      "propertyOrder": 2
    },
    "fabricationDate": {
      "title": "Date Of Fabrication",
      "$ref": "#/definitions/date",
      "propertyOrder": 3
    },
    "conditions": {
      "type": "object",
      "title": "Processing Conditions",
      "properties": {
        "title": {
          "type": "string",
          "title": "Description",
          "template": "{{processName process}} of {{split (split initialComposition '_' 0) ';' 1}} powder at {{temperature}} degC for {{time}} min",
          "format": "textarea",
          "watch": {
            "process": "root.process",
            "initialComposition": "root.initialComposition",
            "temperature": "root.conditions.temperature",
            "time": "root.conditions.time"
          },
          "propertyOrder": 1
        },
        "temperature": {
          "type": "number",
          "title": "Reaction Temperature (degC)",
          "propertyOrder": 2
        },
        "time": {
          "type": "number",
          "title": "Reaction Time (min)",
          "propertyOrder": 3
        }
      },
      "propertyOrder": 4
    },
    "totalMass": {
      "type": "number",
      "template": "{{sum materials 'quantity'}}",
      "watch": {
        "materials": "root.materials"
      },
      "title": "Total Mass (g)",
      "propertyOrder": 5
    },
    "materials": {
      "title": "Materials",
      "type": "array",
      "items": {
        "headerTemplate": "Material {{ i1 }}",
        "type": "object",
        "properties": {
          "quantity": {
            "type": "number",
            "title": "Quantity (g)",
            "propertyOrder": 1
          },
          "files": {
            "title": "Diffraction Data",
            "description": "Upload any relevant files. Make sure they have unique names.",
            "$ref": "#/definitions/files",
            "propertyOrder": 9
          }
        }
      },
      "propertyOrder": 6
    }
  },
  "title": "Ceramic Powder Synthesis (HT-MAX)",
  "description": "Form to track ceramic powder samples for HT-MAX using defined naming conventions and metadata protocols",
  "type": "object",
  "if": {
    "properties": {
      "igsn": {
        "properties": {
          "request": {
            "const": false
          }
        }
      }
    }
  },
  "then": {
    "properties": {
      "igsnMeta": {
        "options": {
          "hidden": true
        },
        "readonly": true
      },
      "assignedIGSN": {
        "options": {
          "hidden": false
        },
        "readonly": true
      }
    }
  }
}
